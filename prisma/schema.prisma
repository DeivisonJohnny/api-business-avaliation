generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  surname  String
  username String @unique
  password String
  roles    Role[]
}

model Role {
  id    String @id @default(uuid())
  name  String
  level Int?
  users User[]
  capabilities Capability[]
}

model Capability {
  id String @id @default(uuid())
  roles Role[]
}

model Employee {
  id String @id @default(uuid())
  name       String
  surname    String
  cpf        String @unique
  shift      String
  sector     String
  assessable Boolean
  roleId String 
  roles RoleEmployees @relation(fields: [roleId], references: [id])
  imgProfile String
}
 

model RoleEmployees {
  id String @id @default(uuid())
  name String
  Employee Employee[]
}