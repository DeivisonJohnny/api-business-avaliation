generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  surname  String
  username String @unique
  password String
  roles    Role[]
}

model Role {
  id    String @id @default(uuid())
  name  String
  level Int?
  users User[]
  capabilities Capability[]
}

model Capability {
  id String @id @default(uuid())
  roles Role[]
}